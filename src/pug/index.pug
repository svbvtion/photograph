include mixins/mixin
doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title Ксения Чебиряк. Фотограф удивительных людей
		link(rel='icon' href='./favicon.ico' type='image/x-icon')
		link(rel="stylesheet" type="text/css" href="static/css/normalize.css")
		link(rel="stylesheet" type="text/css" href="static/css/styles.css")
	body
		.container
			header.hero
				.hero__bg
					+webp('hero__pic', 'alena-14', 'png', 'background image')
				.hero__body
					.hero__top
						.wrapper
							.header
								.header__menu
									nav.menu
										ul.menu__list
											li.menu__item
												a.menu__link(href="./collection.html#art") Art
											li.menu__item
												a.menu__link(href="./collection.html#business") Business
											li.menu__item
												a.menu__link(href="./collection.html#fashion") Fashion
								.header_logo
									a.logo(href="./")
										.logo__icon
											+webp('logo__pic', 'logo', 'png', 'logo')
								.header__social(data-da=('header__menu, 767, last'))
									.social
										ul.social__list
											li.social__item
												a.social__link(href="https://vk.com/chebiryak" target="_blank")
													+svg('vk', 'social__icon')
											li.social__item
												a.social__link(href="https://web.facebook.com/chebiryakk" target="_blank")
													+svg('facebook', 'social__icon')
											li.social__item
												a.social__link(href="https://wa.me/79261764569" target="_blank")
													+svg('twitter', 'social__icon')
											li.social__item
												a.social__link(href="https://www.instagram.com/_kseniya_che_/" target="_blank")
													+svg('instagram', 'social__icon') 
								.burger 
					
					.hero__content
						.hero__text
							h1.title.hero__title Ксения Чебиряк
							p.subtitle.hero__subtitle Фотограф
						a.hero__button.button.modal__link(href="#") Открыть 

					.hero__bottom




			main.content
				section.recent.section
					.wrapper
						.recent__body
							h2.title.title-section.recent__title Последние работы
							.recent__works.works
								.works__row
									a.work.work_big(href="./gallery.html#business/tracy")
										.work__bg
											+webp('work__pic', 'tracy-4', 'jpg', 'work pic')
										.work__description
											span.work__name Tracy Megano - Певица
									a.work(href="./gallery.html#art/art")
										.work__bg
											+webp('work__pic', 'art-9', 'jpg', 'work pic')
										.work__description
											span.work__name In other space
									a.work(href="./gallery.html#fashion/qris")
										.work__bg
											+webp('work__pic', 'qris-3', 'jpg', 'work pic')
										.work__description
											span.work__name qari qris. София
								.works__row
									a.work.work_big(href="./gallery.html#business/south")
										.work__bg
											+webp('work__pic', 'south-2', 'png', 'work pic')
										.work__description
											span.work__name Алёна Вязёнкина - Soul Cats
				section.collections.section
					.collections__body
						.wrapper
							.collection
								.collection__decor.collection__item
									.collection__bg
										+webp('collection__pic', 'painting-1', 'jpg', 'collection background')
								.collection__descr.collection__item
									h3.title.title-section.collection__title Art
									.collection__txt
										p.collection__paragraph Можно снять просто хороший портрет, а можно добавить в него живопись, цвет, настроение, атмосферу, характер... И ещё много чего! Я предпочитаю второе
									a.button.collection__button(href="./collection.html#art") more
							.collection
								.collection__decor.collection__item
									.collection__bg
										+webp('collection__pic', 'olga-8', 'png', 'collection background')
								.collection__descr.collection__item
									h3.title.title-section.collection__title Business
									.collection__txt
										p.collection__paragraph Помогу разработать концепцию съёмки для создания нужного впечатления через фотографии. Выберем образы и стиль съёмки, максимально раскрывающие вашу индивидуальность. Цель - усилить личный бренд.
									a.button.collection__button(href="./collection.html#business") more 
							.collection
								.collection__decor.collection__item
									.collection__bg
										+webp('collection__pic', 'shop-3', 'jpg', 'collection background')
								.collection__descr.collection__item
									h3.title.title-section.collection__title Fashion
									.collection__txt
										p.collection__paragraph  Даже если цель съёмки- показать одежду, я стараюсь рассказать о её создателе и ценностях, мечтах, идеях, которые он вкладывал в свои изделия. Это может быть инстаграм — контент или имиджевая съёмка, подход всегда одинаково серьезный, с большим вниманием к деталям.

									a.button.collection__button(href="./collection.html#fashion") more 


		footer.footer
				.footer__bg
					+webp('footer__pic', 'img_4', 'png', 'footer background')
				.wrapper
					.footer__body
						.footer__top
						.footer__content
							h2.title.footer__title Связаться со мной
							a.button.footer__button.modal__link(href='#') Открыть
						.footer__bottom
							.footer__social
								.social
									ul.social__list
										li.social__item
											a.social__link(href="https://vk.com/chebiryak" target="_blank")
												+svg('vk', 'social__icon')
										li.social__item
											a.social__link(href="https://web.facebook.com/chebiryakk" target="_blank")
												+svg('facebook', 'social__icon')
										li.social__item
											a.social__link(href="https://wa.me/79261764569" target="_blank")
												+svg('twitter', 'social__icon')
										li.social__item
											a.social__link(href="https://www.instagram.com/_kseniya_che_/" target="_blank")
												+svg('instagram', 'social__icon') 

		.modal#modal
			.modal__overlay(data-close="true")
					.modal__window
						span.modal__close(data-close="true") &times;
						.modal__body
							.modal__item.modal__content
								h2.modal__title.title Связаться
								form.form
									.form__field
										input.form__input(type="text" placeholder="Ваше имя" required)
									.form__field
										input.form__input(type="email" placeholder="Ваш Email" required)
									.form__field
										input.form__input(type="tel" placeholder="Ваш телефон" required)
									.form__submit
										button.form__button Отправить
											span.form__button_decor
							
							.modal__decor.modal__item
								.modal__bg
									+webp('modal__pic', 'card-img_2', 'png', 'card')
		script(src="static/js/main.js") 
		script(src="static/js/adapt.js")
		script(src="static/js/modal.js") 